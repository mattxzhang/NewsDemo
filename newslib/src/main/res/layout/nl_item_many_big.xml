<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_twelve">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="资讯标题"
        android:textColor="@color/black_normal"
        android:textSize="@dimen/txt_sub_title" />

    <RelativeLayout
        android:id="@+id/layout_images"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="@dimen/spacing_small"
        >

        <ImageView
            android:id="@+id/img_news_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_loading"
            />

        <TextView
            android:id="@+id/tv_images_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/spacing_four"
            android:layout_marginBottom="@dimen/spacing_four"
            android:text="8张"
            android:textColor="@color/black_normal"
            android:textSize="@dimen/txt_tips"
            />

    </RelativeLayout>

    <include layout="@layout/nl_layout_news_s_cc_t" />

</LinearLayout>