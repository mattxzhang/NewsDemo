<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_avatar"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <com.kingyon.baseuilib.views.PagerSlidingTabStrip
            android:id="@id/pre_tab_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.kingyon.newslib.views.EqualWidthImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/spacing_avatar"
            android:background="@drawable/ui_white_alpha_click"
            android:padding="@dimen/spacing_small"
            android:layout_height="wrap_content"
            android:src="@drawable/img_add" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/pre_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>